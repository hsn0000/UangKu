<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include
            android:id="latToolbar"
            layout="@layout/toolbar"/>

    <TextView android:layout_width="380dp"
              android:layout_height="wrap_content"
              android:text="Name"
              android:textSize="25dp"
              android:textStyle="bold"
              android:layout_marginTop="15dp"
              android:layout_marginStart="15dp"/>

    <EditText android:layout_width="380dp"
              android:layout_height="wrap_content"
              android:hint="Contoh. Kenyamanan"
              android:layout_marginStart="15dp"
              android:inputType="text"/>


    <TextView android:layout_width="380dp"
              android:layout_height="wrap_content"
              android:text="Jumlah"
              android:textSize="25dp"
              android:textStyle="bold"
              android:layout_marginTop="15dp"
              android:layout_marginStart="15dp"/>

    <EditText android:layout_width="380dp"
              android:layout_height="wrap_content"
              android:hint="Contohnya. Rp250"
              android:layout_marginStart="15dp"
              android:inputType="text"/>

    <TextView android:layout_width="380dp"
              android:layout_height="wrap_content"
              android:text="Kategori"
              android:textSize="25dp"
              android:textStyle="bold"
              android:layout_marginTop="15dp"
              android:layout_marginStart="15dp"/>

    <EditText android:layout_width="380dp"
              android:layout_height="wrap_content"
              android:hint="Pilih Kategori"
              android:layout_marginStart="15dp"
              android:inputType="text"/>

    <TextView android:layout_width="380dp"
              android:layout_height="wrap_content"
              android:text="Mulai tanggal"
              android:textSize="25dp"
              android:textStyle="bold"
              android:layout_marginTop="15dp"
              android:layout_marginStart="15dp"/>

    <EditText android:layout_width="380dp"
              android:layout_height="wrap_content"
              android:layout_marginStart="15dp"
              android:inputType="date|datetime"/>

    <TextView android:layout_width="380dp"
              android:layout_height="wrap_content"
              android:text="Periode"
              android:textSize="25dp"
              android:textStyle="bold"
              android:layout_marginTop="15dp"
              android:layout_marginStart="15dp"/>
    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spn_warna_tambahAnggaran"/>
    <Switch
            android:text="Ulangi"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:hint="Perbarui anggaran ini secara otomatis"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:id="@+id/switch1"/>


</LinearLayout>